@page "/"
@page "/resources"
@using LearningResourcesApp.Models.Leermiddel
@using LearningResourcesApp.Client.Services
@using LearningResourcesApp.Client.Components.Base
@inherits BaseComponentWithErrorHandling
@inject ILeermiddelService LeermiddelService
@inject IAutenticatieService AutenticatieService
@inject NavigationManager Navigatie
@implements IDisposable

<PageTitle>Leermiddelen</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Leermiddelen</h3>
        @if (AutenticatieService.IsIngelogd && AutenticatieService.HuidigeGebruiker?.IsInterneMedewerker == true)
        {
            <button class="btn btn-primary" @onclick="NavigeerNaarLeermiddelToevoegen">
                Nieuw Leermiddel Toevoegen
            </button>
        }
    </div>

    <ErrorAlert Message="@foutmelding" OnDismiss="ClearError" />
    <SuccessAlert Message="@succesmelding" OnDismiss="ClearSuccess" />

    @if (isBezig && !leermiddelen.Any())
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Laden...</span>
            </div>
        </div>
    }
    else if (!leermiddelen.Any())
    {
        <div class="alert alert-info">
            Nog geen leermiddelen. Klik op "Nieuw Leermiddel Toevoegen" om te beginnen!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var leermiddel in leermiddelen)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@leermiddel.Titel</h5>
                            <p class="card-text">@leermiddel.Beschrijving</p>
                            <a href="@leermiddel.Link" target="_blank" class="card-link">
                                Bezoek Link
                            </a>
                            <div class="mt-2">
                                <small class="text-muted">
                                    @leermiddel.Reacties.Count reactie(s)
                                </small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => BekijkLeermiddel(leermiddel.Id)">
                                Bekijk Details
                            </button>
                            @if (AutenticatieService.IsIngelogd && AutenticatieService.HuidigeGebruiker?.IsInterneMedewerker == true)
                            {
                                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="() => BewerkLeermiddel(leermiddel.Id)">
                                    Bewerken
                                </button>
                                <button class="btn btn-sm btn-outline-danger ms-2" @onclick="() => VerwijderLeermiddel(leermiddel.Id)">
                                    Verwijderen
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Leermiddel> leermiddelen = new();

    protected override async Task OnInitializedAsync()
    {
        await LaadLeermiddelen();
        AutenticatieService.AutenticatieGewijzigd += OnAutenticatieGewijzigd;
    }

    private void OnAutenticatieGewijzigd()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        AutenticatieService.AutenticatieGewijzigd -= OnAutenticatieGewijzigd;
    }

    private async Task LaadLeermiddelen()
    {
        leermiddelen = await ExecuteWithLoadingAsync(async () =>
        {
            return await LeermiddelService.HaalAlleLeermiddelenOp();
        }, "Er is een fout opgetreden bij het laden van de leermiddelen") ?? new List<Leermiddel>();
    }

    private void NavigeerNaarLeermiddelToevoegen()
    {
        Navigatie.NavigateTo("/add-resource");
    }

    private void BekijkLeermiddel(Guid id)
    {
        Navigatie.NavigateTo($"/resource/{id}");
    }

    private void BewerkLeermiddel(Guid id)
    {
        Navigatie.NavigateTo($"/edit-resource/{id}");
    }

    private async Task VerwijderLeermiddel(Guid id)
    {
        await ExecuteWithSuccessAsync(async () =>
        {
            await LeermiddelService.VerwijderLeermiddel(id);
            await LaadLeermiddelen();
        },
        "Leermiddel succesvol verwijderd.",
        "Er is een fout opgetreden bij het verwijderen van het leermiddel");
    }
}
